<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/logo_login"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/logProgess"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="ยินดีต้อนรับ"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#FFF"
        android:drawableStart="@drawable/person_login"
        android:ems="10"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/passwordInput"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#FFF"
        android:drawableStart="@drawable/key_login"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        android:layout_marginBottom="130dp"
        android:layout_alignBottom="@+id/loginBtn"
        android:layout_alignStart="@+id/emailInput" />

    <CheckBox
        android:id="@+id/rememberChk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:layout_marginBottom="95dp"
        android:textColor="#FFF"
        android:layout_alignBottom="@+id/loginBtn"
        android:layout_alignStart="@+id/emailInput" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_style_log"
        android:textColor="#FFF"
        android:shadowColor="@color/colorAccent"
        android:text="ลงชื่อเข้าใช้"
        android:textSize="16sp"
        android:layout_above="@+id/regBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

