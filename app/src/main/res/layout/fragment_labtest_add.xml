<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="12dp"
    tools:context=".LabTestActivity"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="ผลตรวจ CD4"
            android:textSize="24sp"
            android:textColor="@color/Black" />


        <EditText
            android:background="@drawable/edittext_style"
            android:id="@+id/cd4_d"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:hint="ระบุวันที่"
            android:inputType="date"
            android:textColor="@color/Black"
            android:textColorHint="@color/gray"
            android:textColorHighlight="@color/gray"/>

        <EditText
            android:background="@drawable/edittext_style"
            android:id="@+id/cd4_l"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:hint="ระบุผลตรวจ"
            android:inputType="number"
            android:textColor="@color/Black"
            android:textColorHint="@color/gray"
            android:textColorHighlight="@color/gray"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="ผลตรวจ Viral Load"
            android:textSize="24sp"
            android:textColor="@color/Black" />

        <EditText
            android:background="@drawable/edittext_style"
            android:id="@+id/viral_d"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:hint="ระบุวันที่"
            android:inputType="date"
            android:textColor="@color/Black"
            android:textColorHint="@color/gray"
            android:textColorHighlight="@color/gray"/>

        <EditText
            android:background="@drawable/edittext_style"
            android:id="@+id/viral_l"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:hint="ระบุผลตรวจ"
            android:inputType="number"
            android:textColor="@color/Black"
            android:textColorHint="@color/gray"
            android:textColorHighlight="@color/gray"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/Black" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


